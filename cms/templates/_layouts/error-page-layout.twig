{% extends "_layouts/generic-page-layout.twig" %}

{% block content %}
    <div class="container">
        <h1>
            {{ errorHeadline ?? 'Error' }}
        </h1>
        <p>
            {{ (errorText ?? 'An error has occurred.') |nl2br }}
        </p>
    </div>
{% endblock %}

