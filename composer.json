{
  "name": "simplicate-web/craft",
  "description": "Simplicate scaffolding package for Craft 3 CMS projects",
  "version": "1.0.3",
  "keywords": [
    "craft",
    "cms",
    "craftcms",
    "docker",
    "webpack"
  ],
  "license": "mit",
  "homepage": "https://www.simplicate.ca",
  "type": "project",
  "config": {
    "optimize-autoloader": true,
    "platform": {
      "php": "7.0"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "@php -r \"copy('./cms/example.env', './cms/.env');\"",
      "@php -r \"copy('./scripts/example.env.sh', './scripts/.env.sh');\"",
      "@php -r \"unlink('composer.json');\"",
      "@php -r \"unlink('composer.lock');\"",
      "@php -r \"unlink('LICENSE.md');\"",
      "@php -r \"unlink('README.md');\""
    ]
  }
}
