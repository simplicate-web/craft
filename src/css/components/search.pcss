.c-searchForm {
    font-size: 1.8rem;

    label {
        font-weight: bold;
        display: block;
    }

    input[type=search] {
        min-width: 20rem;
        font-size: 1.8rem;
        line-height: 1em;
        padding: 1rem;

        @mixin tablet-up {
            min-width: 40rem;
        }
        
        @mixin mobile {
            width: calc( 100% - 9rem );
        }
    }
        
    button {
        padding: 1rem;
        width: 9rem;
    }
}

